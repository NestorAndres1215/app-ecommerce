<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<!-- Tailwind CSS -->
<script src="https://cdn.tailwindcss.com"></script>

<link rel="stylesheet" href="/css/user.css">

<body class="min-h-screen bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-800 text-white p-4 md:p-8">

  <!-- Fondo animado -->
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div
      class="absolute top-10 left-10 w-72 h-72 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse-slow">
    </div>
    <div
      class="absolute bottom-10 right-10 w-80 h-80 bg-pink-500 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-pulse-slow animation-delay-2000">
    </div>
  </div>

  <div class="max-w-7xl mx-auto">

    <!-- Header -->
    <div class="glass rounded-3xl p-6 md:p-8 mb-6 shadow-2xl">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
        <div class="flex items-center gap-4">
          <div
            class="w-14 h-14 bg-gradient-to-br from-primary to-purple-600 rounded-2xl flex items-center justify-center shadow-lg">
            <i class="fas fa-users text-white text-2xl"></i>
          </div>
          <div>
            <h1 class="text-3xl font-bold">Lista de Usuarios</h1>
            <p class="text-gray-300 text-sm">Administra y controla todos los usuarios del sistema</p>
          </div>
        </div>

        <!-- Botón Crear -->
        <a href="/users/create"
          class="inline-flex items-center gap-2 bg-gradient-to-r from-primary to-primary-hover text-white font-medium px-6 py-3 rounded-xl shadow-lg btn-hover">
          <i class="fas fa-user-plus"></i>
          Crear nuevo usuario
        </a>
      </div>
    </div>

    <!-- FILTRO DE ESTADO -->
    <div class="glass rounded-2xl p-4 mb-6 shadow-xl">
      <div class="flex flex-wrap items-center justify-between gap-4">
        <div class="flex items-center gap-2">
          <i class="fas fa-filter text-primary"></i>
          <span class="text-sm font-medium text-gray-200">Filtrar por estado:</span>
        </div>
        <div class="flex gap-2">
          <button data-filter="all" class="filter-btn active">
            <i class="fas fa-users"></i> Todos
          </button>
          <button data-filter="activo" class="filter-btn">
            <i class="fas fa-circle-check text-success"></i> Activo
          </button>
          <button data-filter="inactivo" class="filter-btn">
            <i class="fas fa-circle-xmark text-gray-400"></i> Inactivo
          </button>
        </div>
      </div>
    </div>

    <!-- Contador dinámico -->
    <p class="text-sm text-gray-300 mb-4 text-center md:text-left">
      Mostrando <strong id="user-count">
        <%= users.length %>
      </strong> de <strong>
        <%= users.length %>
      </strong> usuarios
    </p>

    <!-- Tabla -->
    <div class="glass rounded-3xl shadow-2xl overflow-hidden">
      <div class="table-container">
        <table class="table w-full">
          <thead>
            <tr>
              <th class="px-6 py-4">ID</th>
              <th class="px-6 py-4">Nombre Completo</th>
              <th class="px-6 py-4">Usuario</th>
              <th class="px-6 py-4">Rol</th>
              <th class="px-6 py-4">Estado</th>
              <th class="px-6 py-4 text-center">Acciones</th>
            </tr>
          </thead>
          <tbody id="users-table-body" class="divide-y divide-white/10">
            <% users.forEach(u=> { %>
              <tr class="user-row" data-status="<%= (u.status?.name || '').toLowerCase() %>">
                <td class="px-6 py-4 text-sm font-mono">#<%= u.id %>
                </td>
                <td class="px-6 py-4">
                  <div class="flex items-center gap-3">
                    <div
                      class="w-10 h-10 bg-gradient-to-br from-primary/20 to-purple-600/20 rounded-full flex items-center justify-center">
                      <i class="fas fa-user text-primary"></i>
                    </div>
                    <div>
                      <p class="font-medium">
                        <%= u.firstName %>
                          <%= u.lastName %>
                      </p>
                      <p class="text-xs text-gray-400">
                        <%= u.email %>
                      </p>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4">
                  <span class="font-medium text-primary">@<%= u.username %></span>
                </td>
                <td class="px-6 py-4">
                  <span class="badge <%= u.role?.name === 'admin' ? 'bg-purple-600 text-white' : 
                                        u.role?.name === 'moderador' ? 'bg-blue-600 text-white' : 
                                        'bg-gray-600 text-white' %>">
                    <%= u.role?.name || 'Sin rol' %>
                  </span>
                </td>
                <td class="px-6 py-4">
                  <span class="badge <%= u.status?.name === 'activo' ? 'bg-success text-white' : 
                                        u.status?.name === 'inactivo' ? 'bg-gray-600 text-white' : 
                                        u.status?.name === 'suspendido' ? 'bg-danger text-white' : 
                                        'bg-warning text-white' %>">
                    <%= u.status?.name || 'Desconocido' %>
                  </span>
                </td>
                <td class="px-6 py-4 text-center">
                  <div class="flex items-center justify-center gap-2">
                    <a href="/users/edit/<%= u.id %>"
                      class="inline-flex items-center gap-1 px-3 py-1.5 bg-info/20 text-info rounded-lg hover:bg-info/30 btn-hover text-sm font-medium">
                      <i class="fas fa-edit"></i> Editar
                    </a>
                    <a href="/users/delete/<%= u.id %>" onclick="return confirm('¿Eliminar usuario <%= u.username %>?')"
                      class="inline-flex items-center gap-1 px-3 py-1.5 bg-danger/20 text-danger rounded-lg hover:bg-danger/30 btn-hover text-sm font-medium">
                      <i class="fas fa-trash"></i> Eliminar
                    </a>
                  </div>
                </td>
              </tr>
              <% }) %>
          </tbody>
        </table>

        <!-- Empty state -->
        <div id="empty-state" class="hidden text-center py-12">
          <i class="fas fa-users-slash text-6xl text-gray-500 mb-4"></i>
          <p class="text-xl text-gray-400">No hay usuarios con este filtro</p>
        </div>
      </div>
    </div>

  </div>

  <!-- JavaScript para FILTRO -->
  <script src="/js/user.js">

  </script>

</body>